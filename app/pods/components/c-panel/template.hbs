<div class="Panel">

  <div class="Panel__header">
    <a onclick={{action 'toggleBody'}}
       class="Panel__header__title">
       {{title}}
    </a>

  </div>

  {{#if isOpen}}
    <div class="Panel__body">
      {{#if hasBlock}}
        {{yield}}
      {{else}}
        {{body}}
      {{/if}}
    </div>
  {{/if}}

</div>
